<%- include('template/header', {titulo : 'Dashboard', css : '/dashboard/datos_basicos.css'}); %>
  <nav>
    <h1>Datos básicos</h1>
    <a href="/login/out"><button id="cerrar_sesion">Cerrar sesión</button></a>
  </nav>
  <form class="formulario" id="form" name="Formulario-datosbasicos-lgd" action="/dashboard" method="POST">
    <div class="reform">
    <label for="nombre-lock">Nombre: 
      <input name="nombre" id="nombre-lock" value="Nombre" type="text" placeholder="Nombre" class="input" disabled>
    </label>
    <label for="apellidos-lock">Apellidos: 
      <input name="apellidos" id="apellidos-lock" value="Apellidos" type="text" placeholder="Apellidos" class="input" disabled>
    </label>

    <label for="fecha-nacimiento">Fecha de nacimiento: 
      <input name="fecha_nacimiento" type="date" name="fechaNacimiento" id="fecha-nacimiento">
    </label>

    <label for="edad-act">Edad:
      <input type="number" name="edad" name="edad-act" id="edad-act" disabled>
    </label>

    <label for="genero">Genero: 
      <input type="text" name="genero" name="genero" id="genero" class="input" disabled>
    </label>

    <label >Documento de Identidad:
      <select name="tipo_documento" id="tipo_id">
        <option value="Seleccione">Seleccione</option>
        <option value="C.C">C.C</option>
        <option value="Carnet diplomatico">Carnet diplomatico</option>   
        <option value="Certificado nacido vivo">Certificado nacido vivo</option>
        <option value="Cedula de extranjeria">Cedula de extranjeria</option>
        <option value="Nit">Nit</option>
        <option value="Pasaporte">Pasaporte</option>
        <option value="Permiso especial de permanencia">Permiso especial de permanencia</option>
        <option value="Permiso de proteccion personal">Permiso de proteccion personal</option>
        <option value="Registro civil">Registro civil</option>
        <option value="Salvoconducto">Salvoconducto</option>
        <option value="Tarjeta de identidad">Tarjeta de identidad</option>
      </select>
      <input type="text" placeholder="Numero de documento de identidad" maxlength="10" id='documento-id' value="Documento" disabled>
    </label>

    <label>Telefono:
      <input name="Telefono" id="telefono" type="number" class="input" placeholder="Telefono" maxlength="10">
    </label>

    <label>Dirección: 
      <input type="text" id="direccion" placeholder="Dirección" class="input" name="Direccion">
    </label>

    <label>Departamento:
      <input type="text" id="departamento" placeholder="Departamento" class="input" name="Departamento">
    </label>

    <label>Ciudad:
      <input type="text" id="ciudad" placeholder="Ciudad" class="input" name="Ciudad">
    </label>

    <label>Estado Civil:
      <select name="EstadoCivil" id="estado-civil">
        <option value="Seleccione">Seleccione</option>
        <option value="Soltero">Soltero</option>
        <option value="Casado">Casado</option>
        <option value="Divorciado">Divorciado</option>
        <option value="Viudo">Viudo</option>
      </select>
    </label>

    <label >Estrato Socioeconómico:
      <select name="estrato" id="estrato">
        <option value="Seleccione">Seleccione</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
      </select>
    </label>

    <label >Ocupación:
      <select name="ocupacion" id="ocupacion" required>
        <option value="Seleccione">Seleccione</option>
        <option value="Estudiante">Estudiante</option>
        <option value="Empleado">Empleado</option>
        <option value="Independiente">Independiente</option>
        <option value="Pensionado">Pensionado</option>
        <option value="Amo de casa">Amo de casa</option>
        <option value="Desempleado">Desempleado</option>
      </select>
    </label>

    <label name="regimen-perteneciente">Régimen Perteneciente:
      <select name="regimenPerteneciente" id="regimen-perteneciente">
        <option value="Seleccione">Seleccione</option>
        <option value="Subsidiado">Subsidiado</option>
        <option value="Contributivo">Contributivo</option>
        <option value="Independiente">Independiente</option>
      </select>
    </label>

      <label for="email">Email: 
        <input type="email" placeholder="Email" class="input" name="email" id="email">
        <input type="email" placeholder="Confirmar Email" class="input" name="email_con" id="email-con">
      </label>
      
      <label for="contraseña">Contraseña: 
        <input type="password" placeholder="Contraseña" class="input" name="password" id="contraseña">
        <input type="password" placeholder="Confirmar Contraseña" class="input" name="password-con" id="contraseña-con">
      </label>
    </div>
    <input type="submit" class="submit" value="Guardar" id="enviar">
  </form>

  <% if (error) { %>
    <div class="error">
      <p><%= error %> </p>
    </div>
  <% } %>

<span id="data" style="visibility: hidden;"><%= data %> </span>
<%- include('template/footer', {script : '/dashboard/dash.js'}) %>